<%- include('../partials/header1') %>


<div class="container mt-5 reg">
    <h1 class="top_1">Register as Faculty:</h1>
  
    <div class="row">
      <div class="col-sm-8">
        <div class="card">
          <div class="card-body">
  
            <!-- Makes POST request to /register route -->
            <form action="/registerfaculty" method="POST">

              <div class="form-group reg">
                <label for="name">Name</label>
                <input type="text" class="form-control" name="name" required>
              </div>

              <div class="form-group reg">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="username" required>
              </div>


              <div class="form-group reg">
                <label>Department</label>
                <select name="branch" class="form-control">
                  <option value="ECE">ECE</option>
                  <option value="CSE">CSE</option>
                  <option value="ME">ME</option>
                  <option value="EEE">EEE</option>
                </select>
                <!-- <input type="text" class="form-control" name="branch"> -->
              </div>

              <div class="form-group reg">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password" required>
              </div>

              <div class="form-group reg">
                <label for="password">Confirm Password</label>
                <input type="password" class="form-control" name="conpassword" required>
              </div>
             
              <div class="reg">
              <button type="submit" class="btn btn-primary btn-lg px-4 gap-3">Register</button>
            </div>

            </form>
  
          </div>
        </div>
      </div>
  
    
  
    </div>
  </div>

<%- include('../partials/footer') %>