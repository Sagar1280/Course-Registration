<%- include('../partials/header1') %>

<div class="container mt-5 reg">
  <h1 class="top_1">Login as Student: </h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/loginstudent" method="POST">
            <div class="form-group reg">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username" required>
            </div>

            <div class="form-group reg">
              <label for="number">Student-ID(2310XYZ)</label>
              <input type="number" class="form-control" name="Student_ID" required>
            </div>

            <div class="form-group reg">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password" required>
            </div>

            <div class="reg">
            <button type="submit" class="btn btn-primary btn-lg px-4 gap-3">Login</button>
        </div>

          </form>

        </div>
      </div>
    </div>



    
    <div class="col-sm-4">
      <div class="card social-block">
        <div class="card-body">
          <a class="btn btn-block" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
            Sign Up with Google
          </a>
        </div>
      </div>
    </div>

  </div>
</div>

<%- include('../partials/footer') %>